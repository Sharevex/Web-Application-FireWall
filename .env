# ===== MySQL =====
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=admin
MYSQL_PASSWORD='At@1381928'
MYSQL_DB=admin
MYSQL_POOL_SIZE=8

# ===== Firewall / OS Enforcement =====
FW_OS_MODE=auto                 # auto | nft | ipset | off
BLOCK_TTL_SECONDS=300           # default DB+OS block TTL (seconds)
BLOCK_SWEEP_SECONDS=30          # how often to sweep expired blocks

# ===== App-layer TTLs / Limits =====
FW_BLOCK_TTL=300
FW_DDOS_BLOCK_TTL=300
FW_NET_BLOCK_TTL=600
FW_DDOS_WINDOW=60
FW_DDOS_MAX=20
FW_DDOS_AUTH_MAX=120
FW_DDOS_HARD_BLOCK_FACTOR=0     # 0=disabled; if >0, hard block when >= factor*limit

# ===== Networking / Server =====
FW_TRUST_PROXY=1                # trust X-Forwarded-For / CF-Connecting-IP
FW_BLOCK_CACHE_SECS=10
FW_LISTEN_HOST=0.0.0.0
FW_LISTEN_PORT=8080
FW_TICK_SECS=10

# ===== Safe GETs / Admins =====
SAFE_GET_PATHS=metrics,stats,top_ips,top_blocked
ADMIN_IPS=                      # e.g. 203.0.113.10,10.0.0.0/24

# ===== Flask secret (change this in production) =====
FW_SECRET_KEY='replace-with-a-long-random-string'
